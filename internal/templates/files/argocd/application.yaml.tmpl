apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: {{.Name}}
  namespace: argocd
  finalizers:
    - resources-finalizer.argocd.argoproj.io
spec:
  project: {{.Project}}
  source:
    repoURL: {{.RepoURL}}
    targetRevision: {{if .TargetRevision}}{{.TargetRevision}}{{else}}HEAD{{end}}
    path: {{.Path}}
  destination:
    server: {{if .Server}}{{.Server}}{{else}}https://kubernetes.default.svc{{end}}
    namespace: {{.Namespace}}
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=true

